@model IEnumerable<Photograph>

<div class="row pb-3">
@foreach (var photo in Model)
{
    <div class="col-lg-3 col-md-6">
        <div class="row p-2">
            <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                <div class="card">
                    <img src="@photo.ImageUrl" class="img-fluid card-img-bottom rounded" alt="@photo.Title">
                    <div class="card-body">
                        <div class="ps-1">
                            <p class="card-title text-info">Title : @photo.Title</p>
                            <p class="card-title text-info">By <b>@photo.Author</b> </p>
                        </div>

                        <div class="ps-1">
                            <p>Price : BDT <b>@photo.Price.ToString("0.00")</b></p>
                        </div>
                    </div>
                </div>
                <div>


                    <a class="btn btn-primary form-control" asp-action="Details" asp-route-id="@photo.Id">
                        Details
                    </a>
                </div>
            </div>
        </div>
    </div>
}
</div>




