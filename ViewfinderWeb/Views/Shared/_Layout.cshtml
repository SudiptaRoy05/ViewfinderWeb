                            <a class="nav-link active" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" asp-controller="Composition" asp-action="Index">Composition</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " asp-area="Admin" asp-controller="Photograph" asp-action="Index">Photograph</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active " asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
